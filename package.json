{
  "name": "promise-plus",
  "version": "0.0.4",
  "description": "promises with sintact sugar for minimizing the use of `then`",
  "main": "promise-plus.js",
  "scripts": {
    "test": "set PROMISE_RANDOM=1&& mocha --reporter spec --bail --check-leaks test/",
    "test-ci": "istanbul cover node_modules/mocha/bin/_mocha --report lcovonly -- --reporter spec --check-leaks test/",
    "test-cov": "istanbul cover node_modules/mocha/bin/_mocha -- --reporter dot --check-leaks test/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codenautas/promise-plus"
  },
  "keywords": [
    "promise",
    "es6"
  ],
  "author": "Codenautas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/codenautas/promise-plus/issues"
  },
  "homepage": "http://github.com/codenautas/promise-plus",
  "dependencies": {
    "best-promise": "0.2.4"
  },
  "devDependencies": {
    "bluebird": "~2.10.0",
    "es6-promise": "~3.0.2",
    "expect.js": "^0.3.1",
    "mocha": "~2.3.2",
    "native-promise-only": "~0.8.1",
    "promises-aplus-tests": "~2.1.1",
    "q": "~1.4.1",
    "rsvp": "~3.1.0",
    "when": "~3.7.3"
  },
  "jshintConfig": {
    "asi": false,
    "forin": true,
    "curly": true
  },
  "qa-control": {
    "package-version": "0.0.1",
    "coverage": 100,
    "run-in": "server",
    "stability": "designing",
    "type": "lib"
  }
}
